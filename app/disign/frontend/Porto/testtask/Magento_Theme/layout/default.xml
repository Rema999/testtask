<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="footer_links" remove="true"/>
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footer-column-3">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-column-3</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footer-column-2">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer-column-2</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="porto-footer">
                <arguments>
                    <argument name="block_id" xsi:type="string">porto-footer</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="header-wrapper">
            <block class="Magento\Cms\Block\Block" name="heeft-wragen">
                <arguments>
                    <argument name="block_id" xsi:type="string">heeft-wragen</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="minicart" destination="header.panel" before="-" />
        <referenceBlock name="top.search">
            <arguments>
                <argument name="sortOrder" xsi:type="number">250</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

